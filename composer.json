{
    "name": "lendable/interview",
    "description": "Fee calculation service for Lendable interview",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "symfony/console": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "bin": ["bin/calculate-fee", "bin/submit"],
    "autoload": {
        "psr-4": {
            "Lendable\\Interview\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lendable\\Interview\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests/",
        "test-coverage": "phpunit --coverage-html coverage/"
    },
    "config": {
        "sort-packages": true
    }
}